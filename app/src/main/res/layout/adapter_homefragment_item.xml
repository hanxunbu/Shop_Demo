<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/adapter_homefragment_item_iv"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/adapter_homefragment_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2333333333333333333333333333333333"
        android:layout_toRightOf="@+id/adapter_homefragment_item_iv"
        android:layout_alignTop="@+id/adapter_homefragment_item_iv"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/adapter_homefragment_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="666666"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/adapter_homefragment_item_iv"
        android:layout_alignBottom="@+id/adapter_homefragment_item_iv"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/adapter_homefragment_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/adapter_homefragment_item_iv"
        android:layout_marginBottom="10dp"
        />
</RelativeLayout>